package game;

import java.awt.Graphics;
import java.awt.Point;

public abstract class GameObject {
	
	private Sprite sprite;
	public int x, y;
	
	public GameObject(Sprite sprite, int x, int y) {
		this.sprite = sprite;
		this.x = x;
		this.y = y;
	}
	
	public void draw(Graphics g) {
		g.translate(location.x, y);
		sprite.draw(g);
	}
	
}
package game;

import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

public class SpriteSheet {
	
	private Image[] images;
	
	public SpriteSheet(String filename, int rows, int columns, int frames) {
		try {
			BufferedImage sheet = ImageIO.read(SpriteSheet.class.getResourceAsStream(filename));
			int w = sheet.getWidth()/columns;
			int h = sheet.getHeight()/rows;
			for(int i=0; i<frames; i++) {
				sheet.getSubimage((i%columns)*w, arg1, w, h)
			}
		} catch (IOException e) {
			System.err.println("Image not loaded: "+filename);
		}
		
	}

}

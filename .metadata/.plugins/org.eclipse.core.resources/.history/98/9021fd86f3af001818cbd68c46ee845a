package game;

import java.awt.Graphics;
import java.util.Dictionary;

public abstract class Sprite {
	
	private static Dictionary<SpriteSheet> animations;
	
	public Sprite(String[] animations) {
		for(int i=0; i<animations.length; i++) {
			loadAnimation(animations[i]);
		}
	}
	
	/**
	 * Render the sprite centered at (0,0)
	 * @param g - the Graphics context centered on the sprite
	 */
	public abstract void draw(Graphics g, GameObject object);
	
	/**
	 * 
	 */
	public void loadAnimation() {
		
	}
}

package game;

import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

public class SpriteSheet {
	
	private Image[] images;
	
	public SpriteSheet(String filename, int rows, int columns, int frames) {
		try {
			BufferedImage sheet = ImageIO.read(SpriteSheet.class.getResourceAsStream(filename));
			sheet.getWidth()/columns;
			sheet.getSubimage(arg0, arg1, arg2, arg3)
		} catch (IOException e) {
			System.err.println("Image not loaded: "+filename);
		}
		
	}

}
